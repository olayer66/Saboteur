<!DOCTYPE html>
<html lang="es">
    <head>
        <title>Saboteur</title>
        <link rel="shortcut icon" type="image/png" href="images/favicon.png"/>
        <link rel="stylesheet" type="text/css"  href="css/style.css">
        <meta charset="UTF-8">
    </head>
    <body>
        <div class="cabeceraYMenu">
          <!--Cabecera-->
          <div class="cabecera">
                    <div id="logo"><img src="images/Logo.png" alt="logo"></div>
          </div>
          <div id="fondoMenu">
            <img src="images/entrada_cueva.png" alt="logoDer">
          </div>
            <!--Menu-->
            <div class="menu">
    		<ul>
                    <li id="boton"><a href="login"><img id="imgBoton" src="images/piedra_login.png" alt="Iniciar sesion"></a></li>
                    <li id="boton"><a href="nuevousuario"><img id="imgBoton" src="images/piedra_nuevo_usuario.png" alt="Nuevo usuario"></a></li>
                </ul>
            </div>
        </div>


	<!--Cuerpo-->
        <div class="cuerpo">           
            <div class="entrada">
                <h1>Partidas Disponibles</h1>
                <div id="partidasDisponibles">
                    
                   <% disponibles.foreach(function(obj){%>
                   <div id="fila">
                       <div id="cell"><%=obj.Nombre%></div>
                       <div id="cell"><%=obj.Num_Jugadores%></div>
                       <div id="cell"><%=obj.Num_Max_Jugadores%></div>
                       <div id="cell"><%=obj.Turnos%></div>
                       <div id="cell"><%=obj.Fecha_Creacion%></div>                      
                   </div> 
                   <%});%> 
                </div>
                <h1>Partidas Partidas creadas</h1>
                <div id="partidasCreadas">
                    
                </div>
                <h1>Partidas temicadas</h1>
                <div id="partidasTerminadas">
                    
                </div>
            </div>
        </div>


    </body>
</html>
