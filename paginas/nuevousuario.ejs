<!DOCTYPE html>
<html lang="es">
    <head>
        <title>Saboteur</title>
        <link rel="shortcut icon" type="image/png" href="images/favicon.png"/>
        <link rel="stylesheet" type="text/css"  href="css/style.css">
        <meta charset="UTF-8">
    </head>
    <body>
        <div class="cabeceraYMenu">
          <!--Cabecera-->
          <div class="cabecera">
                    <div id="logo"><img src="images/Logo.png" alt="logo"></div>
          </div>
          <div id="fondoMenu">
            <img src="images/entrada_cueva.png" alt="logoDer">
          </div>
            <!--Menu-->
            <div class="menu">
    		<ul>
                    <li id="boton"><a href="login"><img id="imgBoton" src="images/piedra_login.png" alt="Iniciar sesion"></a></li>
                    <li id="boton"><a href="nuevousuario"><img id="imgBoton" src="images/piedra_nuevo_usuario.png" alt="Nuevo usuario"></a></li>
                </ul>
            </div>
        </div>


	<!--Cuerpo-->
        <div class="cuerpo">           
            <div class="entrada">
                <% if(errores !== null){%>
                <div class="cajaErrores">
                    <h2>La información introducida en el formulario es incorrecta:</h2>
                    <ul>
                        <% errores.forEach(function(error) { %>
                         <li><%= error.msg %></li>
                        <% }); %>
                    </ul>
                </div>
                <%}%>
                <div id="tablaNuevoUsuario">
                    <form method="POST" action="/nuevousuario" enctype="multipart/form-data">
                    <div id="nick">
                        <div id="Cell">
                            <label for="formNick">Apodo:</label>
                            <input type="text" name="nick" id="formNick" required>
                        </div>
                    </div>
                    <div id="datosUsuario">
                        <div id="Cell">
                            <label for="formNombre">Nombre:</label>
                            <input type="text" name="nombre" id="formNombre" required>
                        </div>
                        <div id="Cell">
                            <label for="formApellidos">Apellidos:</label>
                            <input type="text" name="apellidos" id="formapellidos" required>
                        </div>
                    </div>
                    <div id="contrasenia">
                        <div id="Cell">
                            <label for="formContrasenia">Contraseña:</label>
                            <input type="password" name="contra" id="formContrasenia" required>
                        </div>
                        <div id="Cell">
                            <label for="formContraseniaRep">Repetir la Contraseña:</label>
                            <input type="password" name="contraRep" id="formContraseniaRep" required>
                        </div>
                    </div>
                    <div id="fechaNac">
                        <div id="Cell">
                            <label for="formFecha">Fecha de nacimiento:</label>
                            <input type="date" name="FechaNac" id="formFecha" required> 
                        </div>
                    </div>
                    <div id="sexo">
                        <div id="Cell">
                            <input type="radio" name="sexo" value="H" id="formHombre" checked required>
                            <label for="formHombre">Hombre</label>
                            <input type="radio" name="sexo" value="M" id="formMujer">
                            <label for="formMujer">Mujer</label>
                        </div>
                    </div>
                <div id="tablaNuevoUsuario">
                    <div id="imagen">
                        <div id="Cell">
                            <label for="formImagen">Selecciona una imagen de perfil:</label>
                            <input type="file" name="imgPerfil" id="formImagen" >
                        </div>
                    </div>
                </div>
                    <div id="nuevoEnviar">
                       <div id="Cell">
                            <input type="image" src="images/piedra_crear.png" alt="Submit Form" id="imgBoton">
                       </div>
                    </div>
                </form>
                </div>
            </div>
        </div>


    </body>
</html>
