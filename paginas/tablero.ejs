<!DOCTYPE html>
<html lang="es">
    <head>
        <title>Saboteur</title>
        <link rel="shortcut icon" type="image/png" href="/images/favicon.png"/>
        <link rel="stylesheet" type="text/css"  href="/css/style.css">
        <meta charset="UTF-8">
 
        
    </head>
    <body>
        <div class="cabeceraYMenu">
          <!--Cabecera-->
          <div class="cabecera">
                    <div id="logo"><img src="/images/Logo.png" alt="logo"></div>
          </div>
          
          <div class="conectado">
              <div class="textoConectado">
                  Conectado como <b><%=usuarioConectado%></b>
              </div>
          </div>
          
            <div id="fondoMenu">
              <img src="/images/entrada_cueva.png" alt="logoDer">
            </div>
            <!--Menu-->
            <div class="menu">
    		<ul>
                    <li id="boton"><a href="/desconectar"> <img id="imgBoton" src="/images/piedra_cerrar_sesion.png" alt="Cerrar sesion"></a></li>
                    <li id="boton"><a href="/verpartidas"> <img id="imgBoton" src="/images/piedra_ver_partidas.png"  alt="Ver partidas"> </a></li>
                </ul>
            </div>
        </div>


	<!--Cuerpo-->
        <div class="cuerpo">

            <div class="entrada">
                
                <div class="informacion">
                    <div class="turnoJugador">
                        Turno: <%=jugador_turno%>
                    </div>
                    <div class="numTurno">
                        <%=turno%>/<%=turnos_max%>
                    </div> 
                </div>
                
                <div class="mostrarJugadores">
                    <h2>Jugadores:</h2>
                    
                    <% jugadores.forEach(function(obj){ %>
                    <ul>
                        
                        <li><img id="jugador" src="/images/defecto.png" alt="Jugador por defecto"></li>                     
                        <li><%=obj.Nick%></li>
                    </ul>
                    <%});%>
                </div>
                
                <div  class="casillasTablero">
                    <table class="tablaTablero">
                        
                        <tr>
                            <% for(var i=1; i<=49; i++) {%>
                                <% if(tablero[i-1] !== undefined){%>
                                    
                                    <div class="imgWrap">    
                                        <td><img src="/images/<%=tablero[i-1].imagen%>" alt="<%=tablero[i-1].propietario%>"></td>
                                        <p class="imgDescription">Propietario: <%=tablero[i-1].propietario%></p>
                                    </div>
                                <% }else{ %>                                 
                                    <td><img src="/images/Tback.png" alt="nada"></td>
                                <% } %>
                                <% if(i%7==0 && i!==49){%>
                                    </tr>
                                    <tr>
                                <% } %>
                            <% };%>
                        </tr>
                    </table>
                </div>

                <div class="opcionesJugador">

                    <div class="botonEnviar">
                        <a href=""><img id="jugador" src="/images/piedra_enviar.png" alt="Jugador por defecto"></a>
                    </div>

                    <div class="mano">
                        <% mano.forEach(function(obj){ %>
                            <ul>
                                <li><img id="jugador" src="/images/<%=obj.imagen%>" alt="Jugador por defecto"></li>
                            </ul>
                        <%});%>
                    </div>

                    <div class="botonDescartar">
                        <a href=""><img id="jugador" src="/images/piedra_descartar.png" alt="Jugador por defecto"></a>
                    </div>
                </div>
            </div>
        </div>
    </body>
</html>
